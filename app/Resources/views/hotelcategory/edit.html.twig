{% extends 'userbase.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-primary">{{hotelCategory.categoryName}}</h1>
            </div>
            
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h4 class="text-primary">Edit Hotel Category Details Here...</h4>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <form class="form-horizontal"  method="post">
                                    <div class="box-body">
                                        
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Category name</label>
                                            <div class="col-sm-10">
                                                {{ form_widget(edit_form.categoryName, { 'attr' : { 'class' : 'form-control' , 'placeholder' : 'Hotel Category Name', 'id' : 'form-categoryName'} }) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Description</label>
                                            <div class="col-sm-10">
                                                {{ form_widget(edit_form.description, { 'attr' : { 'class' : 'form-control' , 'placeholder' : 'Description about Hotel Category', 'id' : 'form-description'} }) }}
                                            </div>
                                        </div>
                                    </div><!-- /.box-body -->
                                    <div class="box-footer">
                                        {{ form_rest( edit_form ) }}                       
                                            <button type="submit" class="btn btn-info pull-right">Save</button>
                                        {{ form_end(edit_form) }}
                                        {{ form_start(delete_form) }}
                                            <button type="submit" class="btn btn-danger pull-right">Delete</button>
                                        {{ form_end(delete_form) }}

                                        <a class="btn btn-default" href="{{ path('hotelcategory_index') }}">Veiw List</a>
                                     </div>
                                </form>
                            </div>

                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>

    </div>
{% endblock %}
