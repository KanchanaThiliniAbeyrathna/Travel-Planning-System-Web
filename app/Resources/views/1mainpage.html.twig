<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>{% block title %}TraTRIP | Plan Your Trip{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('relax.ico') }}" />
    
    <link href="{{asset('public/main/css/bootstrap.min.css')}}" rel="stylesheet">
    <link href="{{asset('public/main/css/font-awesome.min.css')}}" rel="stylesheet">
    <link href="{{asset('public/main/css/animate.min.css')}}" rel="stylesheet">
    <link href="{{asset('public/main/css/prettyPhoto.css')}}" rel="stylesheet">
    <link href="{{asset('public/main/css/main.css')}}" rel="stylesheet">
    <link href="{{asset('public/main/css/responsive.css')}}" rel="stylesheet">
     
    <link rel="shortcut icon" href="{{asset('public/main/images/ico/favicon.ico')}}">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="{{asset('public/main/images/ico/apple-touch-icon-144-precomposed.png')}}">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="{{asset('public/main/images/ico/apple-touch-icon-114-precomposed.png')}}">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="{{asset('public/main/images/ico/apple-touch-icon-72-precomposed.png')}}">
    <link rel="apple-touch-icon-precomposed" href="{{asset('public/main/images/ico/apple-touch-icon-57-precomposed.png')}}">

    </head>
    <body>
      <header id="header">
        <div class="top-bar">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-xs-4">
                        <div class="top-number"><p><i class="fa fa-phone-square"></i>  +0123 456 70 90</p></div>

                    </div>
                    <div class="col-sm-6 col-xs-8">
                       <div class="social">
                        
                            <div class="search">
                                <form role="form">
                                    <input type="text" class="search-form" autocomplete="off" placeholder="Search">
                                    <i class="fa fa-search"></i>
                                </form>
                           </div>
                       </div>
                    </div>
                </div>
            </div><!--/.container-->
        </div>

        <nav class="navbar navbar-inverse" role="banner">
            <div class="container">

                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="pull-left"><img src="{{asset('public/img/7logo.jpg')}}"></a>
                </div>
        
                <div class="collapse navbar-collapse navbar-right">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="{{path('app1_example_homepage')}}"><span class="glyphicon glyphicon-home"></span> Home</a></li>
                        <li><a href="{{path('app1_example_places')}}"><i class="fa fa-plane"></i> Places </a></li>
                        <li><a href="{{path('app1_example_hotels')}}"><i class="fa fa-cutlery"></i> Hotels </a></li>
                        <li><a href="{{path('app1_example_about')}}"><span class="glyphicon glyphicon-question-sign"></span> About Us</a></li>
                        <li><a href="{{path('app1_example_contact')}}"><span class="glyphicon glyphicon-earphone"></span> Contact Us</a></li>
                        
                        <!-- app.session.get('login') -->       
                        {% if app.session.has('login') %}
                          <li class="dropdown">
                              <a class="dropdown-toggle" data-toggle="dropdown" href="#"> {{app.session.get('login').getEmail()}} </a>
                              <ul class="dropdown-menu">
                                  <li><a href="{{ path('user_show', { 'id': app.session.get('login').getId() }) }}"><span class="glyphicon glyphicon-user"></span> User Profile</a>
                                  </li>
                                  <li class="divider"></li>
                                  <li><a href="{{path('user_logout')}}"><span class="glyphicon glyphicon-log-in"></span> Logout</a>
                                  </li>
                              </ul>
                          </li>

                        {% else %}
                          <li><a href="{{path('user_signup')}}"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                          <li><a href="{{path('user_login')}}"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                        {% endif %}
                      </ul>
                </div>
            </div>
        </nav>
    
      </header>

      {% if confirmmessage is defined %}
        <div class="container">
            <div class="center wow fadeInDown">  
              <h2></h2>
                <h2>Hello</h2>
                <h2></h2>
                <p class="lead">{{confirmmessage}}</p>
                <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
            </div>  
         
        </div>
      
      {% endif %}

      {% block body %}{% endblock %}

      <footer id="footer" class="midnight-blue">
        <div class="container">
            <div class="row">
                <div class="col-sm-6">
                    &copy; 2016 <a target="_blank" href="http://shapebootstrap.net/" title="Free Twitter Bootstrap WordPress Themes and HTML templates">TraTRIP</a>. All Rights Reserved.
                </div>
                <div class="col-sm-6">
                    <ul class="pull-right">
                        <li><a href="{{path('app1_example_homepage')}}">Home</a></li>
                        <li><a href="{{path('app1_example_about')}}">About Us</a></li>
                        <li><a href="{{path('app1_example_contact')}}">Contact Us</a></li>
                    </ul>
                </div>
            </div>
        </div>
      </footer>

      {% block javascripts %}{% endblock %}
      <script src="{{asset('public/main/js/jquery.js')}}"></script>
      <script src="{{asset('public/main/js/bootstrap.min.js')}}"></script>
      <script src="{{asset('public/main/js/jquery.prettyPhoto.js')}}"></script>
      <script src="{{asset('public/main/js/jquery.isotope.min.js')}}"></script>
      <script src="{{asset('public/main/js/main.js')}}"></script>
      <script src="{{asset('public/main/js/wow.min.js')}}"></script>

    </body>
</html>