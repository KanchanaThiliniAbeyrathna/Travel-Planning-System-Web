{% extends 'userbase.html.twig' %}

{% block body %}
   <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-primary">New Hotel</h1>
            </div>
            
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-info">
                    <div class="panel-heading">
                        <h4 class="text-primary">Add Hotel Details Here...</h4>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <form class="form-horizontal" method="post">
                                    <div class="box-body">
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">name In Full</label>
                                            <div class="col-sm-10">
                                                {{ form_widget(form.nameInFull, { 'attr' : { 'class' : 'form-control' , 'placeholder' : 'name In Full', 'id' : 'form-nameInFull'} }) }}
                                                
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Name In Initials</label>
                                            <div class="col-sm-10">
                                                {{ form_widget(form.nameInInitials, { 'attr' : { 'class' : 'form-control' , 'placeholder' : 'Name In Initials', 'id' : 'form-nameInInitials'} }) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">E mail</label>
                                            <div class="col-sm-10">
                                                {{ form_widget(form.email, { 'attr' : { 'class' : 'form-control' , 'placeholder' : 'Ex : example@gmail.com', 'id' : 'form-email'} }) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Username</label>
                                            <div class="col-sm-10">
                                                {{ form_widget(form.username, { 'attr' : { 'class' : 'form-control' , 'placeholder' : 'Username', 'id' : 'form-username'} }) }}
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Password</label>
                                            <div class="col-sm-10">
                                                {{ form_widget(form.password, { 'attr' : { 'class' : 'form-control' , 'placeholder' : 'Password', 'id' : 'form-password'} }) }}
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Sex</label>
                                            <div class="col-sm-10">
                                                {{ form_widget(form.sex, { 'attr' : { 'class' : 'form-control'} }) }}
                                            </div>
                                        </div>
                                        
                                        <div class="form-group">
                                            <label class="col-sm-2 control-label">Role</label>
                                            <div class="col-sm-10">
                                                {{ form_widget(form.role, { 'attr' : { 'class' : 'form-control'} }) }}
                                            </div>
                                        </div>
                                        
                                    </div><!-- /.box-body -->
                                    <div class="box-footer">
                                        {{ form_rest( form ) }}                       
                                        <button type="submit" class="btn btn-info pull-right">Save</button>
                                        {{ form_end(form) }}

                                        <button class="btn btn-default"><a href="{{ path('hotel_index') }}">Veiw List</a></button>
                                     </div>
                                </form>
                            </div>

                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>

    </div>
{% endblock %}
