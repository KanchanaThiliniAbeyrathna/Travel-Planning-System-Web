{% extends 'userbase.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-primary">All Users
            </div>
            
        </div>
        <div class="row">
            <div class="col-lg-12">
            {% for user in users %}
                <div class="col-lg-4">
                    <div class="panel panel-info">
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">   
                                    <p class="lead text-center text-primary" {{ user.nameInFull }}</p>
                                    
                                </div>
                            </div>
                        </div>
                        <a class="btn btn-block btn-info" href="{{ path('user_show', { 'id': user.id }) }}">View Details  <i class="fa fa-arrow-circle-right"></i></a>
                    </div>
                </div>
            {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}
